{
  "name": "marginal-gains",
  "version": "1.0.0",
  "description": "Self-hosted community chat with Nostr ID integration",
  "scripts": {
    "setup": "bun install",
    "start": "bun --hot run src/server.ts",
    "dev": "bun --hot run src/server.ts",
    "reset-db": "rm -f marginal-gains.sqlite",
    "lint": "eslint . && node scripts/check-inline-js.js",
    "lint:fix": "eslint . --fix && node scripts/check-inline-js.js"
  },
  "dependencies": {
    "applesauce-core": "4.0.0",
    "applesauce-relay": "4.0.0",
    "bun-types": "latest",
    "nostr-tools": "2.7.2",
    "rxjs": "7.8.1",
    "web-push": "^3.6.7"
  },
  "type": "module",
  "license": "MIT",
  "devDependencies": {
    "@types/web-push": "^3.6.4",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "eslint": "^9.39.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.1"
  }
}
